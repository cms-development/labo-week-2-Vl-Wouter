{% extends 'cms.html.twig' %}

{% block body %}
    <section class="container">
        <h2>{{ camp.title }} - Details</h2>
        <p>Voeg de details per taal toe.</p>
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a href="#nl-form" class="nav-link active" role="tab" data-toggle="tab">NL</a>
            </li><li class="nav-item">
                <a href="#en-form" class="nav-link" role="tab" data-toggle="tab">EN</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="nl-form">
                {{ form_start(form_nl) }}
                    {{ form_row(form_nl.locale) }}
                    {{ form_row(form_nl.description) }}
                    {{ form_row(form_nl.quote) }}
                {{ form_end(form_nl) }}
            </div>
            <div class="tab-pane fade in" id="en-form">
                {{ form_start(form_en) }}
                    {{ form_row(form_en.locale) }}
                    {{ form_row(form_en.description) }}
                    {{ form_row(form_en.quote) }}
                {{ form_end(form_en) }}
            </div>
        </div>
    </section>


{% endblock %}